!!! 5
- load sekizai_tags cms_tags menu_tags stack_tags compressed
%html
    %head
        %title Shadowless@Al'Akir-EU
        - render_block "css"
        - addtoblock "css"
            - compressed_css 'main'
        - endaddtoblock
    %body
        - cms_toolbar
        / Header and Nav
        %header.row
            .large-3.columns
                %h1
                    %a{:href => "{% page_url 'home' %}"} Shadowless
            .large-9.columns
                .right
                    %nav.main-nav
                        %ul
                            - show_menu 0 0
        / End Header and Nav
        .row
            / Main Content Section
            / This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens
            .large-9.push-3.columns
                - block content
                    - show_breadcrumb 0 "breadcrumb.haml"
            / Nav Sidebar
            / This is source ordered to be pulled to the left on larger screens
            .large-3.pull-9.columns.sidebar.sidebar-left
                - placeholder page_sidebar
                - stack "sidebar"
        / Footer
        %footer.row
            .large-12.columns
                %hr/
                .row
                    .large-6.columns
                        - stack "footer"
                        / %p Â© Copyright IS VERY RESERVED!!!
                    .large-6.columns
                        .inline-list.right
                            %nav.main-nav
                                %ul
                                    - show_menu 0
        - render_block "js"
        - addtoblock "js"
            - compressed_js 'main'
            :javascript
                $(document).foundation();
        - endaddtoblock
